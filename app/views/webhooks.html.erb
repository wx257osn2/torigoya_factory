<% @hooks.each do |hook| %>
    <div>
        <form action="/webhooks/update/<%= hook.id%>" method="post">
            <label for="target">:target</label>
            <input type="text" name="target" value="<%= hook.target %>">
            <label for="secret">:secret</label>
            <input type="text" name="secret" value="<%= hook.secret %>">
            <label for="script">script_name</label>
            <input type="text" name="script" value="<%= hook.script %>">
            <input type="submit" value="Update">
        </form>
        <form action="/webhooks/delete/<%= hook.id%>" method="post">
            <input type="submit" value="Delete">
        </form>
    </div>
<% end %>

<div>
    <form action="/webhooks/append" method="post">
        <label for="target">:target</label>
        <input type="text" name="target">
        <label for="secret">:secret</label>
        <input type="text" name="secret">
        <label for="script">script_name</label>
        <input type="text" name="script">
        <input type="submit" value="Append">
    </form>
</div>
