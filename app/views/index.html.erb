<div class="row">
  <div class="col-md-4">
      <h1>Installers</h1>
      <%= @builder.platform_package_script_dir() %><br>
      <%= @builder.package_list_revision %>
      <a href="/pull_package_list">git pull origin master</a>
      <ul>
          <% @builder.installers.each do |name| %>
              <li>
                  <%= name %>
                  <ul>
                      <li>
                          <strong><a href="packaging_and_install_lazy/<%= name %>">to queue</a></strong> [<a href="packaging_and_install_lazy/<%= name %>/reuse">reuse</a>]
                          / <a href="packaging_and_install/<%= name %>">exec</a> [<a href="packaging_and_install/<%= name %>/reuse">reuse</a>]
                      </li>
                  </ul>
              </li>
          <% end %>
      </ul>
  </div>

  <div class="col-md-3">
      <h1>Queue</h1>
      Number of tasks: <%= @tasks_queue.size %><br>
      <ul>
          <% @tasks_queue.each_with_index do |td, index| %>
              <li>
                  <% if index == 0 %>
                      <strong>Running =></strong>
                  <% else %>
                      <%= index %>.
                  <% end %>
                  <%= td.name %>
              </li>
          <% end %>
      </ul>
  </div>

  <div class="col-md-5">
      <h1>Packages</h1>
      <a href="/packages">packages</a>

      <h1>Register packages to the repository</h1>
      <a href="/register_to_repository">register_to_repository</a>

      <h1>Deliver messages to nodes</h1>
      <a href="/deliver_messages">nodes</a>

      <h1>Tasks</h1>
      <ul>
          <% @tasks.reverse.each_with_index do |status, index| %>
              <li>
                  <%= status.is_active ? "(active)" : "(finished)" %>
                  <%= status.is_updated ? "(updated)" : "(NOT updated)" %>
                  <a href="status/<%= @tasks.length - index - 1 %>"><%= status.name %></a>
              </li>
          <% end %>
      </ul>

      <h1>Temporary packages</h1>
      <a href="/temp">tmps</a>

      <h1>Webhooks</h1>
      <a href="/webhooks">webhook</a>

      <h1>Logs</h1>
      <a href="/logs">logs</a>
  </div>

</div>
